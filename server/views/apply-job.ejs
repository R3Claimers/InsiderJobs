<%- include('partials/header') %>

<div class="shadow py-4">
    <div class="container px-4 2xl:px-20 mx-auto flex justify-between items-center"> 
        <img onclick="location.href='http://localhost:5173'" class="cursor-pointer" src="/logo.svg" alt="InsiderJobs"/>
    </div>
</div>

<div class="min-h-screen flex flex-col py-10 container px-4 2xl:px-20 mx-auto">
    <div class="bg-white text-black rounded-lg w-full">
        <div class="flex justify-center md:justify-between flex-wrap gap-8 px-14 py-20 mb-6 bg-sky-50 border border-sky-400 rounded-xl">
            <div class="flex flex-col md:flex-row items-center">
                <img class="h-24 bg-white rounded-lg p-4 mr-4 max-md:mb-4 border border-gray-200" src="<%= job.companyId.image %>" alt="<%= job.companyId.name %>" />
                <div class="text-center md:text-left text-neutral-700">
                    <h1 class="text-2xl sm:text-4xl font-medium"><%= job.title %></h1>
                    <div class="flex flex-row flex-wrap max-md:justify-center gap-y-2 gap-6 items-center text-gray-600 mt-2">
                        <span class="flex items-center gap-1">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>
                            <%= job.companyId.name %>
                        </span>
                        <span class="flex items-center gap-1">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                            <%= job.location %>
                        </span>
                        <span class="flex items-center gap-1">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                            <%= job.level %>
                        </span>
                        <span class="flex items-center gap-1">
                            <img width="16" height="16" src="/money_icon.svg" alt="Salary"/>
                            CTC: <%= (job.salary / 1000).toFixed(0) %>k
                        </span>
                    </div>
                </div>
            </div>

            <div class="flex flex-col justify-center text-end text-sm max-md:mx-auto max-md:text-center">
                <button onclick="handleApplyClick()" class="bg-blue-600 p-2.5 px-10 text-white rounded cursor-pointer">Apply Now</button>
                <p class="mt-1 text-gray-600">Posted <%= new Date(job.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></p>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row justify-between items-start">
            <div class="w-full lg:w-2/3">
                <h2 class="font-bold text-2xl mb-4">Job Description</h2>
                <div class="rich-text">
                    <%- job.description %>
                </div>
                <button onclick="handleApplyClick()" class="bg-blue-600 p-2.5 px-10 text-white rounded mt-10 cursor-pointer">Apply Now</button>
            </div>

            <div class="w-full lg:w-1/3 mt-8 lg:mt-0 lg:ml-8 space-y-5">
                <h2 class="font-semibold text-xl">More jobs from <%= job.companyId.name %></h2>
                <% relatedJobs.forEach(relJob => { %>
                    <div class="border p-6 shadow rounded border-gray-200">
                        <div class="flex justify-between items-center">
                            <img class="h-8" src="<%= relJob.companyId.image %>" alt="<%= relJob.companyId.name %>"/>
                        </div>
                        <h4 class="font-medium text-xl mt-2"><%= relJob.title %></h4>
                        <div class="flex items-center gap-3 mt-2 text-xs">
                            <span class="bg-blue-50 border border-blue-200 px-4 py-1.5 rounded"><%= relJob.location %></span>
                            <span class="bg-red-50 border border-red-200 px-4 py-1.5 rounded"><%= relJob.level %></span>
                        </div>
                        <p class="text-gray-500 text-sm mt-4"><%- relJob.description.substring(0, 150) %></p>
                        <div class="mt-4 flex gap-4 text-sm">
                            <button onclick="location.href='/ssr/apply-job/<%= relJob._id %>'" class="bg-blue-600 text-white px-4 py-2 rounded cursor-pointer">Apply now</button>
                            <button onclick="location.href='/ssr/apply-job/<%= relJob._id %>'" class="text-gray-500 border border-gray-500 px-4 py-2 rounded cursor-pointer">Learn more</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

