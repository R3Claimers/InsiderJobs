<script>
function handleApplyClick() {
    showToast('Login to Apply for jobs');
    setTimeout(() => {
        window.location.href = 'http://localhost:5173';
    }, 1000);
}

function showToast(message) {
    Toastify({
        text: message,
        duration: 3000,
        gravity: "top",
        position: "right",
        stopOnFocus: true,
        style: {
            background: "#f44336",
            borderRadius: "8px",
            padding: "16px",
            fontSize: "14px",
        }
    }).showToast();
}
</script>

